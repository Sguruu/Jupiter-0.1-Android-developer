<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/playSoundButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Включить музыку" />

    <Button
        android:id="@+id/cacheDirButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cache_Dir" />

    <Button
        android:id="@+id/fileDirButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="file_Dir" />


    <Button
        android:id="@+id/externalFileDirButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="external_File_Dir" />


</LinearLayout>