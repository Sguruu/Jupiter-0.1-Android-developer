<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/threadsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/threads" />
    <Button
        android:id="@+id/raceConditionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/race_condition" />

    <Button
        android:id="@+id/noRaceConditionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_race_condition" />

    <Button
        android:id="@+id/deadLockButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deadlock" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>